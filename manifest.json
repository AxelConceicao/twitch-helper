{
  "manifest_version": 2,
  "name": "Twitch Helper",
  "version": "1.0.0",
  "description": "This extension allow you to download clips and videos from Twitch platform",
  "permissions": [ "downloads", "storage" ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {},
  "content_scripts": [
    {
      "css": ["styles.css"],
      "js": ["dashboard.js"],
      "matches": ["https://dashboard.twitch.tv/*"]
    },
    {
      "css": ["styles.css"],
      "js": ["clips.js"],
      "matches": ["https://clips.twitch.tv/*"]
    }
  ]
}

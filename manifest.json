{
  "manifest_version": 2,
  "name": "Advanced Twitch Clip Downloader",
  "version": "1.0.0",
  "description": "Easily download several clips at once from your Clips Manager or a clip page with just a click.",
  "permissions": [ "downloads", "storage" ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {},
  "content_scripts": [
    {
      "css": ["styles.css"],
      "js": ["dashboard.js"],
      "matches": ["https://dashboard.twitch.tv/*"]
    },
    {
      "css": ["styles.css"],
      "js": ["clips.js"],
      "matches": ["https://clips.twitch.tv/*"]
    },
    {
      "css": ["styles.css"],
      "js": ["twitch.js"],
      "matches": ["https://www.twitch.tv/*/clip/*"]
    }
  ]
}
